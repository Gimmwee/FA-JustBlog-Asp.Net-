@using FA.JustBlog.Core.Models
@using FA.JustBlog.Core.Repository.UnitOfWork
@inject IUnitOfWork uow
@{
    IEnumerable<Tag> tagsList = uow.TagRepository.GetAll().OrderByDescending(c => c.Count);
}

@foreach (var item in tagsList)
{
    <a style="text-decoration:underline" href="@Url.Action("GetPostsByTag","Post", new {tag = item.Name})">#@item.Name</a>
    <span>&nbsp&nbsp</span>
}